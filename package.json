{
  "name": "react-touch-outside",
  "version": "1.0.0",
  "description": "A modern, performant React hook and component for detecting clicks/touches outside of elements. Works with React and React Native. Zero dependencies, TypeScript ready, tree-shakeable.",
  "keywords": [
    "react",
    "react-native",
    "touch",
    "click",
    "outside",
    "detection",
    "hook",
    "typescript",
    "performance",
    "modal",
    "dropdown",
    "popover",
    "overlay",
    "event-listener",
    "mobile",
    "web",
    "universal",
    "modern",
    "2025",
    "tree-shakeable",
    "zero-dependencies",
    "lightweight",
    "bundle-size",
    "esm",
    "cjs",
    "accessibility",
    "a11y",
    "responsive",
    "cross-platform"
  ],
  "author": "Yaşar Tahir Köse",
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest --run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "prepublishOnly": "npm run build && npm run test && npm run type-check",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-native": ">=0.60.0"
  },
  "peerDependenciesMeta": {
    "react-native": {
      "optional": true
    }
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^18.2.66",
    "@types/react-native": "^0.73.0",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "c8": "^8.0.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^27.0.0",
    "react": "^18.2.0",
    "react-dom": "^19.1.1",
    "react-native": "^0.73.4",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5",
    "vite": "^7.1.5",
    "vitest": "^1.4.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ytahirkose/react-touch-outside.git"
  },
  "bugs": {
    "url": "https://github.com/ytahirkose/react-touch-outside/issues"
  },
  "homepage": "https://github.com/ytahirkose/react-touch-outside#readme",
  "funding": {
    "type": "individual",
    "url": "https://github.com/ytahirkose"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "sideEffects": false,
  "bundleDependencies": [],
  "bundledDependencies": [],
  "size-limit": [
    {
      "path": "dist/index.mjs",
      "limit": "2.5 KB"
    },
    {
      "path": "dist/index.js", 
      "limit": "2.7 KB"
    }
  ]
}
